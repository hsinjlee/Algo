import java.util.*;

class Program {
	//O (n log(n)) time | O (1) space - where n is the length of the array
  public static int[] twoNumberSum(int[] array, int targetSum) {
    int leftIdx = 0;
		int rightIdx = array.length - 1;
		Arrays.sort(array);
		while( leftIdx < rightIdx){
			if (array[leftIdx] + array[rightIdx] == targetSum){
				return new int[]{array[leftIdx], array[rightIdx]};
			} else if (array[leftIdx] + array[rightIdx] > targetSum){
				rightIdx--;
			} else {
				leftIdx++;
			}
		}
		return new int[0];
  }
}
